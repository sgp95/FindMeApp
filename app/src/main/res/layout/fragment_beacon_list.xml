<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_beacon_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textSize="20sp"
        android:layout_marginTop="16dp"
        tools:text="Found" />

    <TextView
        android:id="@+id/tv_beacon_room"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_beacon_status"
        android:layout_centerInParent="true"
        android:layout_marginTop="8dp"
        android:textSize="20sp"
        tools:text="0120" />

    <TextView
        android:id="@+id/tv_beacon_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_beacon_room"
        android:layout_centerInParent="true"
        android:layout_marginTop="8dp"
        android:textSize="20sp"
        tools:text="class room" />

    <TextView
        android:id="@+id/tv_beacon_distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_beacon_type"
        android:layout_centerInParent="true"
        android:layout_marginTop="8dp"
        android:textSize="20sp"
        tools:text="123.34 meters" />

</RelativeLayout>